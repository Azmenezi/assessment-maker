{
  "name": "assessment-maker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^6.1.10",
    "@mui/material": "^6.1.10",
    "cra-template": "1.2.0",
    "docx": "^9.1.0",
    "electron-builder": "^25.1.8",
    "file-saver": "^2.0.5",
    "idb": "^8.0.0",
    "jszip": "^3.10.1",
    "pdfmake": "^0.2.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.2",
    "react-scripts": "^5.0.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.2"
  },
  "main": "electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-start": "electron .",
    "electron-build": "npm run build && electron-builder",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-dev-win": "cross-env NODE_ENV=development electron .",
    "start-electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 http://localhost:3001 http://localhost:3002 && cross-env NODE_ENV=development electron .\"",
    "win-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 http://localhost:3001 http://localhost:3002 && cross-env NODE_ENV=development npx electron .\"",
    "start-electron-3002": "concurrently \"npm start\" \"wait-on http://localhost:3002 && cross-env NODE_ENV=development electron .\"",
    "debug-electron": "cross-env NODE_ENV=development DEBUG=* electron .",
    "test-electron": "cross-env NODE_ENV=development electron test-electron.js"
  },
  "build": {
    "appId": "com.assesment.maker",
    "productName": "Assessment Maker",
    "files": [
      "build/**/*",
      "electron.js",
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "wait-on": "^8.0.3"
  }
}
